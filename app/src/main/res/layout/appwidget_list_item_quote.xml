<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stock_widget_item"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/widget_item_padding"
    android:paddingRight="@dimen/widget_item_padding"
    android:paddingStart="@dimen/widget_item_padding"
    android:paddingEnd="@dimen/widget_item_padding"
    >
    <TextView
        android:id="@+id/stock_symbol"
        style="@style/StockSymbolTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        tools:text="GOOG"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        >
        <TextView
            android:id="@+id/bid_price"
            style="@style/BidPriceTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/widget_bid_padding"
            android:paddingLeft="@dimen/widget_bid_padding"
            tools:text="1000.00"
            android:paddingEnd="@dimen/widget_bid_padding"
            android:paddingStart="@dimen/widget_bid_padding"
            />
        <TextView
            android:id="@+id/change"
            android:background="@drawable/percent_change_pill"
            style="@style/PercentChangeTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/widget_change_padding"
            android:paddingRight="@dimen/widget_change_padding"
            tools:text="100%"
            android:paddingStart="@dimen/widget_change_padding"
            android:paddingEnd="@dimen/widget_change_padding"
            />
    </LinearLayout>
</LinearLayout>