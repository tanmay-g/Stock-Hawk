            <!--fab:fab_colorPressed="@color/primary_dark"-->
            <!--fab:fab_colorRipple="@color/ripple"-->
            <!--fab:fab_shadow="true"-->
            <!--fab:fab_type="normal"-->
            <!--fab:layout_anchor="recycler_view"-->
            <!--fab:layout_anchorGravity="bottom | end"-->
    <!--</FrameLayout>-->
</android.support.design.widget.CoordinatorLayout>